<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <TextView
        android:id="@+id/driverNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver Name: "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lorryNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorry Number: "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/driverNameTextView"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/leavePredictionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Diseases Results"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lorryNumberTextView" />

    <Button
        android:id="@+id/plantPredictionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Leaf Quality Results"
        app:layout_constraintStart_toEndOf="@id/leavePredictionButton"
        app:layout_constraintTop_toTopOf="@id/leavePredictionButton" />

    <TextView
        android:id="@+id/predictionResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prediction Result: "
        android:textSize="16sp"
        android:visibility="gone"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plantPredictionButton"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/predictionImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/predictionResultTextView"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
